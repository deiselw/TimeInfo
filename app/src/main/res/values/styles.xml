<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AppThemeDialog</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Prefs">
        <item name="android:listDivider">@null</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorText</item>
    </style>

    <style name="AppTheme.SubheadLight">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AppTheme.Headline">
        <item name="fontFamily">roboto</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="AppTheme.Body1">
        <item name="fontFamily">roboto</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="AppTheme.Title">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.TitleLight">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.Display4">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display4</item>
    </style>

    <style name="AppTheme.Caption">
        <item name="fontFamily">roboto</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="AppTheme.CaptionLight">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="CardRoundButton" parent="Base.CardView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="ButtonSize" parent="Base.CardView">
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="TextAppearanceTitleLight" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">#fff</item>
    </style>

</resources>
